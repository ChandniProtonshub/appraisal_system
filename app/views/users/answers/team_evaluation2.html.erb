<div id="header">
 <center>
   <h1>Team Evaluation Form </h1>
   <p style="text-align: left; font-size: 15px;">
   </div>
   <%= form_for @answer, url: users_update_tem_ans_path(), method: :put do |f| %>
   <div id="mid">
     <p style="text-align: right; font-size: 15px;">
      <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
      <br>
      <%= link_to 'Back', :back%><br>
      <%= link_to 'Home', users_path(@user)%>
    </p>
  </center>
  <table>
   <% @questions.each_with_index do |question, i| %><br>
   <tr>
    <%= i+1 %> <%= question.description %><br>
    <%= label_tag :answer, "Answer:" %><br>
    <%= text_area_tag "questions[#{question.id}][description]", class: "text_area" %><br>
  </tr>
  <% end %>
</tr><br>
<%= submit_tag "Submit" %><br><br>
<%= link_to 'Answers For Self Evaluation', users_self_evaluation_path %>
</table>
</div></div>
<% end %>
<div id="footer">
</div>









