<div id="header">
  <center>
    <h2>Create an account</h2>
  </center>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<center>
  <div id="mid">
    <div class="field">
      <%= f.label :fname, "First Name" %><br />
      <%= f.text_field :fname, autofocus: true, autocomplete: "first name"%>
      <%= resource.errors[:fname].last %>
      </div>

    <div class="field">
      <%= f.label :lname, "Last Name" %><br />
      <%= f.text_field :lname, autofocus: true, autocomplete: "lastname"%>
       <%= resource.errors[:lname].last %>
    </div>
    <div class="field">
      <%= f.label :email, "Email" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "Email"%>
      <%= resource.errors[:email].last %>
    </div>
    <div class="field">
      <%= f.label :pnumber, "Phone Number" %><br />
      <%= f.number_field :pnumber, autofocus: true, autocomplete: "Phone number"%>
      <%= resource.errors[:pnumber].last %>
    </div>
    <div class="field">
      <b>Gender</b><br />
      <%= f.radio_button :gender, 'Female' %> Female
      <%= f.radio_button :gender, 'Male' %> Male <br />
      <%= resource.errors[:gender].last %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <%= resource.errors[:password].last %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      <%= resource.errors[:password_confirmation].last %>
    </div>
    <div class="actions">
      <%= f.submit "Sign up", class: "" %>
    </div>
    <%= link_to "Back", "/users/sign_in" %>
    <h4>
    <%#= devise_error_messages! %></h4>
    <% end %>
  
    <%#= f.submit "Sign up" %>
    <%# end %>
    <%#= render "devise/shared/links" %>
  </center>
</div>
<div id="footer">
</div>


