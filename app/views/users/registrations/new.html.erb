<div id="header">
  <center>
    <h2>Create an account</h2>
  </center>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<center>
  <div id="mid">
    <div class="field">
      <%= f.label :fname, "First Name" %><br />
      <%= f.text_field :fname, autofocus: true, autocomplete: "first name"%>
      </div>

    <div class="field">
      <%= f.label :lname, "Last Name" %><br />
  <%= f.text_field :lname, autofocus: true, autocomplete: "lastname"%>
    </div>
    <div class="field">
      <%= f.label :email, "Email" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "Email"%>
    </div>
    <div class="field">
      <%= f.label :pnumber, "Phone Number" %><br />
      <%= f.number_field :pnumber, autofocus: true, autocomplete: "Phone number"%>
    </div>
    <div class="field">
      <b>Gender</b><br />
      <%= f.radio_button :gender, 'Female' %> Female
      <%= f.radio_button :gender, 'Male' %> Male <br />
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
    <%= link_to "Back", "/users/sign_in" %>
    <h4>
    <%= devise_error_messages! %></h4>
    <% end %>
  

    <%#= f.submit "Sign up" %>
    <%# end %>
    <%#= render "devise/shared/links" %>
  </center>
</div>
<div id="footer">
</div>



