<div id ="header">
	<center>
		<h3>Welcome to admin panel</h3>
	</center>
</div>
<center>
	<div id ="mid">
		<p style="text-align: right; font-size: 15px;">
			<%= link_to "Sign Out", destroy_user_session_path, method: :delete %>

		</p>
		<br>
		<br>
		<h4>Please Generate Questions here</h4><br>
		<%= form_for(@question, :url => {action: "create"}) do |form| %>
		<%= form.select :question_type_id, @ques.collect { |p| [ p.name, p.id ] }, {include_blank: 'Select One Option'}, :required => true %> 
		<br>
		<%= form.text_area :description, placeholder: "Create question here", :required => true %>
		<br>
		<br>
		<%= form.submit %>
		<% end %>
		<%= link_to 'Back', admin_users_path %>
	</div>
	<div id="footer">
	</div>
